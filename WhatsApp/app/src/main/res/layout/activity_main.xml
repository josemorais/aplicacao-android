<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".activity.MainActivity"
    android:orientation="vertical">

    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <whatsapp.cursoandroid.com.whatsapp.helper.SlidingTabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stl_tabs"
        android:background="@color/colorPrimary"
        android:theme="@style/corAbas">

    </whatsapp.cursoandroid.com.whatsapp.helper.SlidingTabLayout>
    
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/vp_pagina"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
